<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11BBBBBB"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="153dp"
            android:layout_height="183dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/doitbook" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothic"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:text="Do It 안드로이드 앱 프로그래밍\n Sample UI"
            android:textColor="#000000"
            android:textSize="20sp"
            app:fontFamily="@font/nanumbarungothicbold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.961"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_go_ch05"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:gravity="center|start"
                    android:text="5장 - 프래그먼트"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    app:backgroundTint="#FFFFFF"
                    app:cornerRadius="10dp"
                    app:fontFamily="@font/nanumbarungothic" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_go_ch06"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:gravity="center|start"
                    android:text="6장 - 서비스와 수신자"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    app:backgroundTint="#FFFFFF"
                    app:cornerRadius="10dp"
                    app:fontFamily="@font/nanumbarungothic" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_go_ch07"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:gravity="center|start"
                    android:text="7장 - 선택위젯"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    app:backgroundTint="#FFFFFF"
                    app:cornerRadius="10dp"
                    app:fontFamily="@font/nanumbarungothic" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_go_ch11"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:gravity="center|start"
                    android:text="11장 - DataBase"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    app:backgroundTint="#FFFFFF"
                    app:cornerRadius="10dp"
                    app:fontFamily="@font/nanumbarungothic" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_go_ch12"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:gravity="center|start"
                    android:text="12장 - 그래픽"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    app:backgroundTint="#FFFFFF"
                    app:cornerRadius="10dp"
                    app:fontFamily="@font/nanumbarungothic" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_go_ch13"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:gravity="center|start"
                    android:text="13장 - 멀티미디어"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    app:backgroundTint="#FFFFFF"
                    app:cornerRadius="10dp"
                    app:fontFamily="@font/nanumbarungothic" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_go_ch14"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:gravity="center|start"
                    android:text="14장 - 지도"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    app:backgroundTint="#FFFFFF"
                    app:cornerRadius="10dp"
                    app:fontFamily="@font/nanumbarungothic" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>